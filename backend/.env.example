# Server Configuration
NODE_ENV=development
PORT=8000
LOG_LEVEL=debug

# Authentication
JWT_SECRET=your_super_secret_key_here
JWT_EXPIRATION=1h

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/eprescription
DIRECT_URL=postgresql://postgres:password@localhost:5432/eprescription

# Logging Configuration
# Available levels: fatal, error, warn, info, debug, trace
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Security Configuration
# Password hashing settings
ARGON2_MEMORY_COST=19456
ARGON2_TIME_COST=2
ARGON2_PARALLELISM=1

# Development Configuration
DEBUG=true
DEBUG_NAMESPACE=app:*

# Log Rotation Configuration (in days)
LOG_RETENTION=30
LOG_ROTATION_INTERVAL=1
